# Backend Environment Variables
# Копіюйте цей файл у .env і заповніть значеннями

# Список дозволених origins для CORS (через кому)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Порт сервера
PORT=4000

# MongoDB підключення
MONGO_DB_URI=mongodb://localhost:27017/degustazione-di-vino

# JWT секретний ключ
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT expires in (наприклад: 1d, 7d, 24h)
JWT_EXPIRES_IN=7d

# Node.js середовище
NODE_ENV=development

